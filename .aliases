##### GIT ######################################################################

alias b='bundle'
alias be='bundle exec'
alias cms='bundle exec rake db:create db:migrate db:test:prepare db:seed'
alias wip='git add -A; git commit -m wip'

unwip() {
  glog=`git log -1 --pretty=%B`;
  if [[ $glog == "wip" ]]; then g reset HEAD^;
  else echo "last commit is not wip";
  fi
}

alias croutes='be rails routes | colrou'

gcb() { git checkout -b "$@"; }
gdv() { git diff -w "$@" | view - }

# run pick inside git repo and copy result to clipboard
gcopy() { temp=`git ls-files | pick`; echo $temp; echo $temp | pbcopy; }


